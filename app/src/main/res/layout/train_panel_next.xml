<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/train_panel_next"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    style="@style/train_panel_next"
    >

    <TextView
        android:id="@+id/train_panel_next_next"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:drawableRight="@drawable/arrow_right"
        android:layout_gravity="center|right"
        android:text="@string/train.panel.next.labelNext"
        style="@style/train_panel_next_labelNext"
        />

    <TextView
        android:id="@+id/train_panel_next_skip"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center|center"
        android:text="@string/train.panel.next.labelSkip"
        style="@style/train_panel_next_labelSkip"
        />




</FrameLayout>