<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/profile_panel">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/testimage"
        android:layout_margin="16dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/fullNameProfile"
        android:text="Тулупов Алексей"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fullNameProfileText"
        android:layout_alignTop="@+id/avatarImage"/>

    <TextView
        android:id="@+id/languageLevelProfile"
        android:text="Intermediate"
        android:layout_below="@+id/fullNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/languageLevelProfileText"/>

</RelativeLayout>