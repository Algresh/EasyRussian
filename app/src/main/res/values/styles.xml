<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="languageLevelProfileText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">112dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="fullNameProfileText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">112dp</item>
    </style>

    <style name="blockDictionaryMain">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@drawable/main_container_shape_dictionary</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="trainLabelEnRu" parent="dictionaryLabel">

    </style>

    <style name="trainLabelRuEn" parent="dictionaryLabel">

    </style>

    <style name="blockTrainEnRu" parent="blockDictionaryMain">

    </style>

    <style name="blockTrainRuEn" parent="blockDictionaryMain">

    </style>

    <style name="blockTrainIdiom" parent="blockDictionaryMain">

    </style>

    <style name="trainLabelIdiom" parent="dictionaryLabel">

    </style>

    <style name="blockStatisticMain">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@drawable/main_container_shape_statistic</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="blockRemindMain">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/main_container_shape_reminder</item>
    </style>

    <style name="mainContainer">
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="profile_panel">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="dictionaryLabel">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="statisticProgress">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cardViewWord">

    </style>

    <style name="wordLabelRussian">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="wordLabelEnglish">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialogAddWordBlock">
        <item name="android:padding">16dp</item>
    </style>

    <style name="russianEdt">
        <item name="android:layout_marginTop">32dp</item>
    </style>
    <style name="englishEdt"></style>
    <style name="addToDictionary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="btnTranslateWord"></style>
    <style name="btnSaveWord"></style>

    <style name="fullnameNavHead">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">36dp</item>
    </style>

    <style name="englishLevelNavHead">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="train_panel">
        <item name="android:background">@color/white</item>
    </style>

    <style name="train_panel_score" parent="train_panel">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="train_panel_score_digit">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="train_panel_score_label">
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="train_panel_next" parent="train_panel">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="train_panel_next_labelSkip">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="train_panel_next_labelNext" parent="train_panel_next_labelSkip">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="train_panel_quest" parent="train_panel">
        <!--<item name=""-->
        <item name="android:padding">8dp</item>
    </style>

    <style name="train_panel_quest_correctWord">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="train_panel_quest_wrongWord">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="train_panel_quest_word">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="word_translate_train">
        <item name="android:background">@color/mainBackground</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="train_panel_answer">
        <!--<item name="android:ma"-->
    </style>

    <style name="train_panel_answer_row">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/mainBackground</item>
    </style>
    
    <style name="train_panel_answer_item">
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
