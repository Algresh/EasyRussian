<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="languageLevelProfileText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">112dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="fullNameProfileText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">112dp</item>
    </style>

    <style name="blockDictionaryMain">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@drawable/main_container_shape_dictionary</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="blockStatisticMain">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:background">@drawable/main_container_shape_statistic</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="blockRemindMain">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/main_container_shape_reminder</item>
    </style>

    <style name="mainContainer">
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="profile_panel">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="dictionaryLabel">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="statisticProgress">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
